d=. ; while [ ! -d $d/debian -a `readlink -e $d` != / ]; do d=$d/..; done

if [ -d $d/debian ]; then
	cd "$d"
	licensecheck -c '^((?!\.(png|bmp|qm|mo|gz|gpg|zck|zip|xz)$).)*$' --copyright -r `find * -type f` | /usr/lib/cdbs/licensecheck2dep5 > debian/copyright.in
	cd - 1>/dev/null
else
	echo "ERROR: not insinde a Debian source package tree."
fi
